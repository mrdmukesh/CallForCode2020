@model TestBooster24GroupApp.Core.ViewModel.TestBoosetr24GroupViewModel
@{
    ViewBag.Title = "TestBoosetr24Group form";
}
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h3>Add TestBoosetr24Group </h3>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                @using (Html.BeginForm(Model.Action, "Account", FormMethod.Post, new { @class = "form-horizontal form-label-left", autocomplete = "off" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)

                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Group Name</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Name)
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Group Owner</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.GroupOwnerId, new { @class = "form-control " })
                            @Html.ValidationMessageFor(m => m.GroupOwnerId)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Creation Date</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">                           
                            @Html.TextBoxFor(m => m.CreationDate, new { @class = "form-control col-md-7 col-xs-12 datepicker " })
                            @Html.ValidationMessageFor(m => m.CreationDate)
                        </div>
                    </div>
                    @*<div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">City</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownListFor(m => m.City, new SelectList(Model.Cities, "Id", "Name"), "Select", new { @class = "form-control col-md-7 col-xs-12" })
                            @Html.ValidationMessageFor(m => m.City)
                        </div>
                    </div>*@


                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Address</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control " })
                            @Html.ValidationMessageFor(m => m.Address)
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Group Test Status</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.TestStatus, new { @class = "form-control " })
                            @Html.ValidationMessageFor(m => m.TestStatus)
                        </div>
                    </div>
                                                                          
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-4">
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
<script>
        $(document).ready(function () {

            $('.datepicker').datepicker({
                format: 'dd/mm/yyyy',
                //clearBtn: true,
                todayHighlight: true,
                //todayBtn: true,
                //todayBtn: 'linked',
                orientation: "top left",
                autoclose: true
            });

        });
</script>
}